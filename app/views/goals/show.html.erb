<div>
  <div>
    <h1>
      Goal #<%= @the_goal.id %> details
    </h1>

    <div>
      <div>
        <a href="/goals">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_goal/<%= @the_goal.id %>">
          Delete goal
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Goal
      </dt>
      <dd>
        <%= @the_goal.goal %>
      </dd>

      <dt>
        Creator
      </dt>
      <dd>
        <%= @the_goal.creator_id %>
      </dd>

      <dt>
        Start date
      </dt>
      <dd>
        <%= @the_goal.start_date %>
      </dd>

      <dt>
        End date
      </dt>
      <dd>
        <%= @the_goal.end_date %>
      </dd>

      <dt>
        Length
      </dt>
      <dd>
        <%= @the_goal.length %>
      </dd>

      <dt>
        Bet amount
      </dt>
      <dd>
        <%= @the_goal.bet_amount %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_goal.created_at) %> ago
      </dd>



      
      <dt>
        Participants in this goal
      </dt>
      <dd>
        <% @the_goal.participants.each do |participant| %>
         <%= participant.email %>
         
        <% end %> 
      </dd>




      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_goal.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>

